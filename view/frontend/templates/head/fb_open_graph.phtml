/** @var $block FacebookOpenGraph */

$fbAppId = $block->getFacebookAppId();
/** @noinspection PhpUnhandledExceptionInspection */
$ogData = $block->getOpenGraphData()
?>
<?php if ($fbAppId) : ?>
    <meta property="fb:app_id" content="<?php echo $block->escapeQuote($fbAppId); ?>">
<?php endif; ?>

<?php foreach ($ogData as $key => $value): ?>
    <?php if (isset($key, $value)): ?>
        <meta property="og:<?php echo $block->escapeQuote((string)$key); ?>" content="<?php echo $block->escapeQuote((string)$value); ?>">
    <?php endif; ?>
<?php endforeach; ?>
